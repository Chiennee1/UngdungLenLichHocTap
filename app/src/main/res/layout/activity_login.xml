<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background_gradient">

    <!-- Header Section - Compact -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="16dp">

        <!-- Back Button - Tròn hoàn hảo -->
        <TextView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_button_background"
            android:gravity="center"
            android:text="←"
            android:textSize="18sp"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:elevation="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Tạo tài khoản"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

    </RelativeLayout>

    <!-- Main Content - Scrollable với compact design -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp"
            android:gravity="center">

            <!-- Main Content Card - Compact -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/background_white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- Logo Section - Smaller -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="@color/primary_blue_light"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="SM"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_white" />

                    </androidx.cardview.widget.CardView>

                    <!-- App Name - Smaller -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="StudyMate"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_marginBottom="4dp" />

                    <!-- Subtitle - Smaller -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tạo tài khoản"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="2dp" />

                    <!-- Description - Smaller -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sử dụng email để tạo tài khoản"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp"
                        android:gravity="center" />

                    <!-- Email Input - Compact -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary_blue"
                        app:boxStrokeWidth="1dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:hintTextColor="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="email@gmail.com"
                            android:inputType="textEmailAddress"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:paddingVertical="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Continue Button - Compact -->
                    <Button
                        android:id="@+id/btnContinue"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="Tiếp tục"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white"
                        android:backgroundTint="@color/primary_blue"
                        app:cornerRadius="10dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Divider with "hoặc" - Compact -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/divider" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hoặc"
                            android:textSize="12sp"
                            android:textColor="@color/text_hint"
                            android:paddingHorizontal="12dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/divider" />

                    </LinearLayout>

                    <!-- Google Sign In Button - Compact -->
                    <Button
                        android:id="@+id/btnGoogleSignIn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/logo_google"
                        android:drawablePadding="20dp"
                        android:gravity="center"
                        android:text="SỬ DỤNG TÀI KHOẢN GOOGLE"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        app:cornerRadius="10dp"
                        app:strokeColor="@color/border_light"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Terms and Conditions - Compact -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bằng việc tiếp tục, bạn đồng ý với Điều khoản sử dụng của chúng tôi. Đọc chính sách bảo mật tại đây."
                android:textSize="10sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginHorizontal="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>